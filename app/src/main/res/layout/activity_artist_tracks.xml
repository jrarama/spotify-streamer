<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/artist_track_toolbar"
        style="@style/ToolbarDefault"
        >
    </android.support.v7.widget.Toolbar>

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_artist_tracts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_artist_tracks"
        android:name="com.jrarama.spotifystreamer.app.fragment.ArtistTracksFragment"
        android:layout_below="@+id/artist_track_toolbar"
        />
</RelativeLayout>