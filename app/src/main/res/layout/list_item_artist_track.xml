<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItemDefault"
    >

    <ImageView
        android:id="@+id/artist_track_image"
        style="@style/ListImageDefault"
        />


    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/artist_track_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/artist_track_album"
            android:text="Album Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/texts_margin_bottom"
            />

        <TextView
            android:id="@+id/artist_track_name"
            android:text="Track Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>