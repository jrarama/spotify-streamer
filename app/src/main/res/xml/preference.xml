<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title="@string/pref_country_label"
        android:key="@string/pref_country_key"
        android:defaultValue="@string/pref_country_default"
        android:inputType="textCapCharacters"
        android:maxLength="2"
        android:summary="@string/pref_country_summary"
        />

    <CheckBoxPreference
        android:title="@string/pref_notif_ctrl_label"
        android:key="@string/pref_notif_key"
        android:defaultValue="@string/pref_notif_default"
        android:summary="@string/pref_notif_summary"
        />
</PreferenceScreen>